<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>

    <PackageId>LemosLogger</PackageId>
    <Version>1.0.7</Version>
    <License>MIT</License>
    <Authors>Lucas Lemos</Authors>
    <PackageDescription>Create logs in mongoDB</PackageDescription>
    <Description>Create logs in mongoDB</Description>
    <RepositoryUrl>https://github.com/LucasBLs/LLogger</RepositoryUrl>
    <PackageProjectUrl>https://github.com/LucasBLs/LLogger</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>logger,MongoDB,logging</PackageTags>
    <Title>LemosLogger</Title>
    <Summary>Create logs in mongoDB</Summary>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\Media\icon.png" Pack="true" PackagePath="\" />
    <PackageReference Include="MongoDB.Driver" Version="2.18.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>

</Project>
